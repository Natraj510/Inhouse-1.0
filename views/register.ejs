<div class="m-auto col-md-6" style="margin-top: 30px!important;">
    <div>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title" style="text-align: center;">Create account</h4>
          <form action="/admin/register" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" placeholder="Enter username" type="name" name="name" id="name">
            </div>
            <div class="form-group">
                <label for="email">Email ID</label>
                <input class="form-control" placeholder="Enter email id" type="email" name="email" id="email">
            </div>
            <div class="form-group">
                <label for="name">Password</label>
                <input class="form-control" placeholder="Enter Password" type="password" name="password" id="password" >
            </div>
            <div class="form-group">
                <label for="name">Confirm Password</label>
                <input class="form-control" placeholder="Re-enter Password" type="password" name="confirm" id="confirm">
            </div>
            <button class="btn btn-success btn-block mb-2">Register</button>
          </form>
          <!-- <p>Already have an account? <a href="/users/login">Login</a></p> -->
        </div>
      </div>
    </div>
  </div>